#!/bin/bash -e
usage() {
    echo "usage:"
    echo "  ${0##*/} type{exe|dll|lib} name"
    echo ""
    echo "example:"
    echo "  $ ham-cppm-filepath exe foo"
    echo "  lin-x64/foo.x64"
    exit 1
}

if [ -z "$1" ] || [ -z "$2" ]; then
  usage
fi

TYPE=$1
NAME=$2

BIN_LOA=${HAM_TARGET_BIN_LOA:-$HAM_BIN_LOA}
FILE_PATH=none
case $TYPE in
  exe)
    case $BIN_LOA in
      osx-*)
        PREFIX=""
        SUFFIX=""
        ;;
      nt-*)
        PREFIX=""
        SUFFIX=".exe"
        ;;
      lin-*)
        PREFIX=""
        SUFFIX=".x64"
        ;;
      lin-*)
        PREFIX=""
        SUFFIX=".html"
        ;;
      *)
        PREFIX="unknown-exe-"
        SUFFIX=".unknown-exe"
        ;;
    esac
    FILE_PATH=${BIN_LOA}/${PREFIX}${NAME}${SUFFIX}
    ;;

  dll)
    case $BIN_LOA in
      osx-*)
        PREFIX="lib"
        SUFFIX=".dylib"
        ;;
      nt-*)
        PREFIX=""
        SUFFIX=".dll"
        ;;
      lin-*)
        PREFIX="lib"
        SUFFIX=".so"
        ;;
      web-js)
        PREFIX=""
        SUFFIX=".no-dll-platform"
        ;;
      *)
        PREFIX="unknown-dll-"
        SUFFIX=".unknown-dll"
        ;;
    esac
    FILE_PATH=${BIN_LOA}/${PREFIX}${NAME}${SUFFIX}
    ;;

  lib)
    case $BIN_LOA in
      osx-*)
        LINKER=clang
        PREFIX="lib"
        SUFFIX=".a"
        ;;
      nt-*)
        LINKER=msvc
        PREFIX=""
        SUFFIX=".lib"
        ;;
      lin-*)
        case "$HAM_CPP_TOOLSET" in
          gcc*)
            LINKER=gcc
            ;;
          *)
            LINKER=clang
            ;;
        esac
        PREFIX="lib"
        SUFFIX=".a"
        ;;
      web-js)
        LINKER=em
        PREFIX=""
        SUFFIX=".a"
        ;;
      *)
        LINKER=unknown
        PREFIX="unknown-lib-"
        SUFFIX=".unknown-lib"
        ;;
    esac
    FILE_PATH=${LINKER}-${BIN_LOA}/${PREFIX}${NAME}${SUFFIX}
    ;;

  *)
    echo "E/Unknown type '$TYPE'."
    exit 1
    ;;
esac

echo "$FILE_PATH"
