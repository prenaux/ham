#!/bin/bash -e
usage() {
    echo "usage:"
    echo "  ham-cppm-libpath name"
    echo ""
    exit 1
}

if [ -z "$1" ]; then
  usage
fi

case $HAM_BIN_LOA in
  osx-*)
    PREFIX="lib"
    SUFFIX=".dylib"
    ;;
  nt-*)
    PREFIX=""
    SUFFIX=".dll"
    ;;
  *)
    PREFIX="lib"
    SUFFIX=".so"
    ;;
esac

echo ${PREFIX}${1}${SUFFIX}
