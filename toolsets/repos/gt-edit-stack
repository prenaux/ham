#!/bin/bash -e
. "$HAM_HOME/bin/ham-bash-setenv.sh"
export HAM_NO_VER_CHECK=1
toolset_import_once nodejs > /dev/null

usage() {
    echo "usage: ${0##*/} (nostash)"
    echo ""
    echo "  'gt downstack edit' with auto stashing and restacking."
    exit 1
}

STASH=1
if [ "$1" == "nostash" ]; then
    STASH=0
    shift
fi

if [ $STASH == 1 ]; then
  (set -x;
   git-stash trypop gt-edit-stack ;
   git-stash push gt-edit-stack)
fi

(set -x;
 gt downstack edit $@ ;
 gt stack restack)

if [ $STASH == 1 ]; then
    (set -x ;
     git-stash trypop gt-edit-stack)
fi
