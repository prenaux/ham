#----------------------------------------------------------------------
#     OS Variables
#----------------------------------------------------------------------
POSIX = 1 ;
if $(OS) = MACOSX {
  OSX = 1 ;
}
else if $(OS) = LINUX {
  LINUX = 1 ;
  LOA_OS = lin ;
}

#----------------------------------------------------------------------
#     LOA
#----------------------------------------------------------------------
LOA_OS ?= $(HAM_OS:L) ;
LOA_LINKER = gcc ;
LOA_ARCH = $(OSPLAT:L) ;

#----------------------------------------------------------------------
#     TARGET FEATURES
#----------------------------------------------------------------------
if ( $(OS) = MACOSX ) || ( $(OS) = LINUX ) {
  TARGET_FEATURE_EXE = 1 ;
  TARGET_FEATURE_DLL = 1 ;
  TARGET_FEATURE_CONSOLE = 1 ;
  if $(BUILD_JNI) = 1 {
    TARGET_FEATURE_JNI = 1 ;
  }
}
