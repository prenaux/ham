#----------------------------------------------------------------------
#     OS Variables
#----------------------------------------------------------------------
POSIX = 1 ;
if $(TARGET_OS) = MACOSX {
  OSX = 1 ;
}
else if $(TARGET_OS) = LINUX {
  LINUX = 1 ;
  LOA_OS = lin ;
}
else if $(TARGET_OS) = NT {
  WINDOWS = 1 ;
}
else {
  EXIT "E/Unsupported OS:" $(OS) ;
}

#----------------------------------------------------------------------
#     LOA
#----------------------------------------------------------------------
LOA_OS ?= $(TARGET_OS:L) ;
LOA_LINKER = zigcc ;
LOA_ARCH = $(TARGET_OSPLAT:L) ;

#----------------------------------------------------------------------
#     DEFINES
#----------------------------------------------------------------------
DEFINES += ZIGCC=1 __ZIGCC__ ;

#----------------------------------------------------------------------
#     TARGET FEATURES
#----------------------------------------------------------------------
TARGET_FEATURE_EXE = 1 ;
TARGET_FEATURE_DLL = 1 ;
TARGET_FEATURE_CONSOLE = 1 ;
